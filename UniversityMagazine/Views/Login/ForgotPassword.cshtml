@model  EntityModels.EF.ACCOUNT
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Forgot Password</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Content/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- toastr -->
    <link rel="stylesheet" href="~/Content/plugins/toastr/toastr.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

                <div class="col-sm-6">

                    <a href="@ViewBag.url">@ViewBag.Back</a>

                    @if (TempData["AlertMessage"] != null)
                    {
                        <div id="toast-container" class="toast-top-right hide">
                            <div class="toast toast-@TempData["AlertType"]" aria-live="polite" style="">
                                <div class="toast-message">@TempData["AlertMessage"]</div>
                            </div>
                        </div>
                    }
                </div><!-- /.col -->
                <!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <div class="login-box">
        <div class="login-logo">
            <b>Đặt lại mật khẩu</b>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Please enter your email to reset password</p>
                @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
                {

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" });

                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.ACCOUNT_Email, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Email" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Next</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }

                <p class="mt-3 mb-1">
                    @Html.ActionLink("Login", "Index", "Login", new { area = "" })
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/dist/js/adminlte.min.js"></script>
</body>
</html>



