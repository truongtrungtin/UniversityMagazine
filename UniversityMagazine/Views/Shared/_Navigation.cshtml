                <li class=" nav-item">
                    <a href="/" class="nav-link">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Dashboard
                        </p>
                    </a>
                </li>
                @if (Credential.Where(x => (x.ROLE_Name == "FrmCongViec" && x.CREDENTIAL_VIEW == true) || (x.ROLE_Name == "FrmGiaoDich" && x.CREDENTIAL_VIEW == true) || (x.ROLE_Name == "FrmKhachHang" && x.CREDENTIAL_VIEW == true) || (x.ROLE_Name == "FrmNhuCau" && x.CREDENTIAL_VIEW == true)).Count() > 0)
