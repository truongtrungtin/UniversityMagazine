                            <i class="nav-icon fas fa-copy"></i>
                            <p>
                                Account
                                <i class="fas fa-angle-left right"></i>
                            </p>
                        </a>

                        <ul class="nav nav-treeview">
                            @if (Credential.Where(x => x.ROLE_Name == "FrmCongViec" && x.CREDENTIAL_VIEW == true).Count() > 0)
                            {
                                <li class="nav-item">
                                    <a href="~/Accounts" class="nav-link" id="Account">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Accounts</p>
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
