@using EntityModels.EF
@using UniversityMagazine.DAO
@{
    UniversityMagazineDBContext db = new UniversityMagazineDBContext();
}

<div class="card card-secondary">
    <div class="card-header pt-2 pr-2 pl-2 pb-2">
        <h3 class="card-title">Role</h3>
    </div>
    <div class="card-body pb-0 pt-2 pr-2 pl-2">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Role</label>
                    <div class="col-lg-10">
                        <div class="input-group">
                            <input type="text" name="ROLE_Code" class="form-control form-control-sm" required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Description</label>
                    <div class="col-lg-10">
                        <div class="input-group">
                            <input type="text" name="ROLE_Name" class="form-control form-control-sm" required />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</div>
<div style="text-align:right">
    <button type="submit" class="btn btn-primary btn-sm start">Add</button>
    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
</div>
